generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // THIS WAS MISSING VVV
  url      = env("DATABASE_URL")
}

model WaitlistApplication {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  linkedIn  String?
  dealSize  String?
  icp       String?
  createdAt DateTime @default(now())
  status    String   @default("PENDING") 
}
model Opportunity {
  id        String   @id @default(cuid())
  userEmail String
  userName  String
  company   String
  role      String
  ask       String
  createdAt DateTime @default(now())
}
model Trade {
  id                  String   @id @default(cuid())
  opportunityId       String
  company             String
  requesterEmail      String
  offererEmail        String
  offererName         String
  
  // The proof fields
  contactLinkedIn     String   
  relationshipContext String   
  
  // Statuses: PENDING, ACCEPTED, COMPLETED
  status              String   @default("PENDING") 
  createdAt           DateTime @default(now())
}